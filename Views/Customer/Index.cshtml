@{
    ViewData["Title"] = "Khách hàng";
    if (Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest")
    {
        Layout = null;
    }
}
@model IEnumerable<RetailStore.Models.Customer>

<div class="col-md-10">
    <div class="bg-white border-bottom p-3 mb-3">
        <div class="row align-items-center">
            <div class="col-auto">
                <a class="btn btn-outline-primary" asp-controller="Customer" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Thêm
                </a>
            </div>

            <div class="col">
                <form asp-action="Index" method="get" class="d-flex justify-content-end">
                    <div class="input-group" style="width: 300px;">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập tên, SĐT hoặc email...">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <form asp-action="DeleteSelected" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger"
                    onclick="return confirm('Bạn có chắc chắn muốn xóa các mục đã chọn?');">
                <i class="bi bi-trash"></i> Xóa mục đã chọn
            </button>
        </div>

        <div class="px-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" class="form-check-input" id="selectAll"></th>
                            <th>Mã KH</th>
                            <th>Tên khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Điểm tích lũy</th>
                            <th>Phân hạng</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input row-checkbox"
                                               name="selectedIds" value="@item.CustomerId">
                                    </td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge bg-info">@item.LoyaltyPoints điểm</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@item.CustomerTier</span>
                                    </td>
                                    <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.CustomerId">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.CustomerId">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">Không có dữ liệu.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

<style>
    .nav-link {
        border-left: 3px solid transparent;
    }

        .nav-link.active {
            border-left-color: #0d6efd;
        }

        .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    .table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.8em;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selectAllCheckbox = document.getElementById('selectAll');
            const rowCheckboxes = document.querySelectorAll('.row-checkbox');

            selectAllCheckbox.addEventListener('change', function () {
                rowCheckboxes.forEach(checkbox => {
                    checkbox.checked = selectAllCheckbox.checked;
                });
            });
        });
    </script>
}
