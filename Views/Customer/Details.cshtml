@model RetailStore.Models.Customer
@{
    ViewData["Title"] = "Chi tiết Khách hàng";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết khách hàng</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-person text-primary"></i> Thông Tin Cơ Bản
                    </h5>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Mã khách hàng:</strong></div>
                        <div class="col-sm-9">@Model.CustomerId</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Tên khách hàng:</strong></div>
                        <div class="col-sm-9">@Model.Name</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Số điện thoại:</strong></div>
                        <div class="col-sm-9">@(Model.Phone ?? "Chưa cập nhật")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Email:</strong></div>
                        <div class="col-sm-9">@(Model.Email ?? "Chưa cập nhật")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Địa chỉ:</strong></div>
                        <div class="col-sm-9">@(Model.Address ?? "Chưa cập nhật")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Điểm tích lũy:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-info fs-6">@Model.LoyaltyPoints điểm</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Phân hạng:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-success fs-6">@Model.CustomerTier</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-clock-history text-info"></i> Thông Tin Audit
                    </h5>

                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                        <div class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Người tạo:</strong></div>
                        <div class="col-sm-8">@(Model.CreatedBy ?? "System")</div>
                    </div>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Ngày cập nhật:</strong></div>
                            <div class="col-sm-8">@Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Người cập nhật:</strong></div>
                            <div class="col-sm-8">@(Model.UpdatedBy ?? "System")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    h5 {
        color: #495057;
        font-weight: 600;
    }

    .badge {
        font-size: 0.9em;
    }
</style>
