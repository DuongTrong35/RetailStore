@{
    var role = Context.Session.GetInt32("NumberRole");
    var username = Context.Session.GetString("UserName");
    var nameuserole = Context.Session.GetString("UserRole");
    var namerole = Context.Session.GetString("NameRole");
    var nameshort = Context.Session.GetString("ShortName");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/RetailStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="HomeContainer">
        <div class="HomeLeft">
            <!-- <div class="HomeLeftCover"> -->
            <ul style="padding:0;">
                <li style="width: 100%; height: 100px; ">
                    <div class="user-profile" style="width: 100%; height: 100%;background-color: blanchedalmond;">
                        <div class="d-flex align-items-center" style="display: flex">
                            <div class="user-avatar">@nameshort</div>
                            <div class="ms-3" style="margin-left: 30px; margin-top: -9px">
                                <div class="user-name">@nameuserole</div>
                                <div class="user-role">@namerole</div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="active">
                    <div class="HomeLeftImg">
                        <img src="~/Icons/HomeIcon.png" alt="" />
                    </div>
                    <p>Trang chủ</p>
                </li>
                @if (role == 1)
                {
                    <li data-url="/Staff/Index">
                        <div class="HomeLeftImg">
                            <img src="~/Icons/staff.png" alt="" />
                        </div>
                        <p>Nhân viên</p>
                    </li>
                }
                    <li data-url="/Customer/Index">
                        <div class="HomeLeftImg">
                            <img src="~/Icons/customer-satisfaction.png" alt="" />
                        </div>
                        <p>Khách hàng</p>
                    </li>
                @if (role == 1)
                {
                    <li data-url="/Category/Index">
                        <div class="HomeLeftImg">
                            <img src="~/Icons/categories.png" alt="" />
                        </div>
                        <p>Danh mục</p>
                    </li>
                }
                <li>
                    <div class="HomeLeftImg">
                        <img src="~/Icons/import.png" alt="" />
                    </div>
                    <p>Phiếu nhập</p>
                </li>
                <li>
                    <div class="HomeLeftImg">
                        <img src="~/Icons/invoice.png" alt="" />
                    </div>
                    <p>Hóa đơn</p>
                </li>
                <li>
                    <div class="HomeLeftImg">
                        <img src="~/Icons/coupon.png" alt="" />
                    </div>
                    <p>Ưu đãi</p>
                </li>

                <li>
                    <div class="HomeLeftImg">
                        <img src="~/Icons/supplier.png" alt="" />
                    </div>
                    <p>Nhà cung cấp</p>
                </li>
                @if (role == 1)
                {
                    <li>
                        <div class="HomeLeftImg">
                            <img src="~/Icons/account-settings.png" class="leftcenterarrow" />
                        </div>
                        <p>Tài khoản</p>
                    </li>
                    <li>
                        <div class="HomeLeftImg">
                            <img src="~/Icons/authorization.png" class="leftcenterarrow" />
                        </div>
                        <p>Phân quyền</p>
                    </li>
                    <li>
                        <div class="HomeLeftImg">
                            <img src="~/Icons/statistics.png" class="leftcenterarrow" />
                        </div>
                        <p>Thống kê</p>
                    </li>
                }
            </ul>
            @if (role == 1)
                {
            <div class="logout-section">
                <button class="btn-logout" onclick="confirmLogout()">
                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                </button>
                </div>
            }
            else
            {
                <div class="logout-section" style="margin-top:292px;">
                    <button class="btn-logout" onclick="confirmLogout()">
                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                    </button>
                </div>
            }
            <!-- </div> -->
        </div>
        <div class="HomeRight" id="HomeRight">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const menuItems = document.querySelectorAll(".HomeLeft li");
        menuItems.forEach(item => {
            item.addEventListener("click", () => {
                menuItems.forEach(i => i.classList.remove("active"));
                item.classList.add("active");
            });
        });

        document.querySelectorAll(".HomeLeft li[data-url]").forEach(item => {
            item.addEventListener("click", () => {
                const url = item.getAttribute("data-url");
                fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } })
                    .then(res => res.text())
                    .then(html => {
                        document.getElementById("HomeRight").innerHTML = html;
                    })
                    .catch(err => console.error("Lỗi tải view:", err));
            });
        });

           function confirmLogout() {
                if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    // Add your logout logic here
                    window.location.href = '/';
                }
            }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
