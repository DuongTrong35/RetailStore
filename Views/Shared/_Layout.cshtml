<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetailStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RetailStore.styles.css" asp-append-version="true" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 250px;
            z-index: 100;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
        }

        .user-profile {
            padding: 20px;
            border-bottom: 1px solid #dee2e6;
            background-color: #fff;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .user-name {
            font-weight: 600;
            font-size: 16px;
            margin-bottom: 2px;
            color: #212529;
        }

        .user-role {
            font-size: 12px;
            color: #6c757d;
            text-transform: uppercase;
        }

        .sidebar-menu {
            padding: 0;
            margin: 0;
        }

        .sidebar .nav-link {
            color: #495057;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            border-left: 3px solid transparent;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .sidebar .nav-link i {
                font-size: 20px;
                width: 24px;
                margin-right: 12px;
            }

            .sidebar .nav-link:hover {
                background-color: #e9ecef;
                color: #0d6efd;
            }

            .sidebar .nav-link.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                border-left-color: #0d6efd;
                font-weight: 500;
            }

        .logout-section {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            border-top: 1px solid #dee2e6;
            background-color: #fff;
        }

        .btn-logout {
            width: 100%;
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

            .btn-logout:hover {
                background-color: #c82333;
            }

        .main-content {
            margin-left: 250px;
            padding: 0;
            min-height: 100vh;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
            }

            .logout-section {
                position: relative;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <!-- User Profile Section -->
        <div class="user-profile">
            <div class="d-flex align-items-center">
                <div class="user-avatar">BL</div>
                <div class="ms-3">
                    <div class="user-name">Bùi Hữu Luân</div>
                    <div class="user-role">Admin</div>
                </div>
            </div>
        </div>

        <!-- Menu Items -->
        <ul class="nav flex-column sidebar-menu">       
            <li class="nav-item">
                <a class="nav-link " nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "active" : "")"
                    <i class="bi bi-person-fill"></i>
                    <span>Tài khoản</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="nhan-vien">
                    <i class="bi bi-people-fill"></i>
                    <span>Nhân viên</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="khach-hang">
                    <i class="bi bi-person-badge"></i>
                    <span>Khách hàng</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="phan-quyen">
                    <i class="bi bi-gear-fill"></i>
                    <span>Phân quyền</span>
                </a>
            </li>      
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")"
                   asp-controller="Category" asp-action="Index">
                    <i class="bi bi-grid-fill"></i>
                    <span>Danh mục</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="phieu-nhap">
                    <i class="bi bi-receipt"></i>
                    <span>Phiếu nhập</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="hoa-don">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Hóa đơn</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="uu-dai">
                    <i class="bi bi-bookmark-fill"></i>
                    <span>Ưu đãi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-page="nha-cung-cap">
                    <i class="bi bi-building"></i>
                    <span>Nhà cung cấp</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#" data-page="thong-ke">
                    <i class="bi bi-bar-chart-fill"></i>
                    <span>Thống kê</span>
                </a>
            </li>
        </ul>

        <!-- Logout Section -->
        <div class="logout-section">
            <button class="btn-logout" onclick="confirmLogout()">
                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

