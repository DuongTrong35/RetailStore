@{
    ViewData["Title"] = "Nhân viên";
}
@model IEnumerable<RetailStore.Models.User>
<div class="col-md-10">
    <div class="bg-white border-bottom p-3 mb-3">
        <div class="row align-items-center">
            <div class="col">
                <form asp-action="Index" method="get" class="d-flex justify-content-end">
                    <div class="input-group" style="width: 300px;">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập tên nhân viên...">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="px-3">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã nhân viên</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.UserId
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.CreatedAt</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Không có dữ liệu.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<style>
    .nav-link {
        border-left: 3px solid transparent;
    }

        .nav-link.active {
            border-left-color: #0d6efd;
        }

        .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    .table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }
</style>