@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="Container">
        <!-- From Uiverse.io by JohnnyCSilva -->
        <div class="PictureLeft">
            <img src="~/Icons/team7na.png" alt="" />
        </div>
        <!-- From Uiverse.io by KapeParaguay -->
        <!-- From Uiverse.io by zanina-yassine -->
        <div class="flex items-center justify-center h-screen ">
            <div class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 p-[8px] rounded-xl shadow-lg w-[500px]">
                <div class="bg-white rounded-xl p-8 flex flex-col items-center">

                    <div class="logo_container mb-4">
                        <img src="~/Icons/logodn.png" alt="Logo" class="w-16 h-16 object-contain">
                    </div>

                    <div class="title_container text-center mb-6">
                        <p class="text-2xl font-bold text-gray-800">Đăng nhập Konoha Market</p>
                        <span class="text-sm text-gray-500">Nếu cậu không thích số phận của mình, đừng chấp nhận nó. Thay vào đó, hãy dũng cảm thay đổi nó theo ý mình</span>
                    </div>

                    <form asp-action="Index" asp-controller="Login" method="post" class="w-full flex flex-col gap-4">

                        <!-- Email -->
                        <div class="flex flex-col">
                            <label for="email_field" class="text-sm font-medium text-gray-700 mb-1">Username</label>
                            <div class="relative flex items-center">
                                <!-- <svg class="absolute left-3 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24">
                                  <path stroke-linejoin="round" stroke-linecap="round" stroke-width="1.5" stroke="#141B34" d="M7 8.5L9.94202 10.2394C11.6572 11.2535 12.3428 11.2535 14.058 10.2394L17 8.5"></path>
                                  <path stroke-linejoin="round" stroke-width="1.5" stroke="#141B34" d="M2.01577 13.4756C2.08114 16.5412 2.11383 18.0739 3.24496 19.2094C4.37608 20.3448 5.95033 20.3843 9.09883 20.4634C11.0393 20.5122 12.9607 20.5122 14.9012 20.4634C18.0497 20.3843 19.6239 20.3448 20.7551 19.2094C21.8862 18.0739 21.9189 16.5412 21.9842 13.4756C22.0053 12.4899 22.0053 11.5101 21.9842 10.5244C21.9189 7.45886 21.8862 5.92609 20.7551 4.79066C19.6239 3.65523 18.0497 3.61568 14.9012 3.53657C12.9607 3.48781 11.0393 3.48781 9.09882 3.53656C5.95033 3.61566 4.37608 3.65521 3.24495 4.79065C2.11382 5.92608 2.08114 7.45885 2.01576 10.5244C1.99474 11.5101 1.99475 12.4899 2.01577 13.4756Z"></path>
                                </svg> -->
                                <i class="fa-solid fa-user absolute left-3 w-5 h-5 text-black-400"></i>

                                <input type="text"
                                       id="email_field"
                                       name="username"
                                       placeholder="Username"
                                       class="w-full border border-gray-300 rounded-md py-2 pl-10 pr-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="flex flex-col">
                            <label for="password_field" class="text-sm font-medium text-gray-700 mb-1">Password</label>
                            <div class="relative flex items-center">
                                <!-- <svg class="absolute left-3 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-width="1.5" stroke="#141B34" d="M18 11.0041C17.4166 9.91704 16.273 9.15775 14.9519 9.0993C13.477 9.03404 11.9788 9 10.329 9C8.67911 9 7.18091 9.03404 5.70604 9.0993C3.95328 9.17685 2.51295 10.4881 2.27882 12.1618C2.12602 13.2541 2 14.3734 2 15.5134C2 16.6534 2.12602 17.7727 2.27882 18.865C2.51295 20.5387 3.95328 21.8499 5.70604 21.9275C6.42013 21.9591 7.26041 21.9834 8 22"></path>
                                  <path stroke-linejoin="round" stroke-linecap="round" stroke-width="1.5" stroke="#141B34" d="M6 9V6.5C6 4.01472 8.01472 2 10.5 2C12.9853 2 15 4.01472 15 6.5V9"></path>
                                </svg> -->
                                <i class="fa-solid fa-key absolute left-3 top-3 w-5 h-5 text-black-400"></i>

                                <input type="password"
                                       id="password_field"
                                       name="password"
                                       placeholder="Password"
                                       class="w-full border border-gray-300 rounded-md py-2 pl-10 pr-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        <!-- Nút Sign in -->
                        <button type="submit"
                                class="w-full bg-[#377dff] hover:bg-blue-600 text-white font-semibold py-2 rounded-md transition">
                            Sign In
                        </button>

                        <!-- Forgot password -->
                        <a href="#" class="text-blue-600 text-sm text-center hover:underline">
                            Forgot Password?
                        </a>

                    </form>
                </div>
            </div>
        </div>


        <!-- --------------------------------------------------------------------------------------------------- -->
        <!-- ----------------------------------------------------------------------------------------------------------- -->
        <div class="PictureRight">
            <img src="~/Icons/team7bo.png" alt="" />
        </div>
    </div>
</body>
</html>
